<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEEEE"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical">


        <LinearLayout

            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal"
            android:padding="10dp">


            <com.alexzh.circleimageview.CircleImageView
                android:id="@+id/banar1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/white"
                app:view_borderColor="#cccccc"
                app:view_borderWidth="0dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cart_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone" />


                    <customfonts.MyTextView1
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"
                        android:hint="Andrew Simonds "
                        android:inputType="text"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16dp" />


                    <ImageButton
                        android:id="@+id/dlt"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/removecart"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rps"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />


                    <customfonts.MyTextView1
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="CEO"
                        android:textColor="#f61a1a"
                        android:textSize="16dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="-15dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/minus"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/minus"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />


                    <EditText
                        android:id="@+id/txtqty"
                        android:layout_width="37dp"
                        android:layout_height="22dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@layout/rounded_border_edittext"
                        android:inputType="number"
                        android:text="0"
                        android:textAlignment="center" />

                    <ImageButton
                        android:id="@+id/plus"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/plus"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />


                </LinearLayout>


                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_marginLeft="6dp"-->
                <!--android:layout_marginRight="16dp"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#dad8d8"/>-->


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>












